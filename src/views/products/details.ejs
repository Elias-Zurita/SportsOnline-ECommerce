                <div class="box1M">4</div>
                <div class="box1M">5</div>
            </div>
            <div class="descProM">Color: IdColor</div>
            <div class="colorContainer">
                <div class="box2M">1</div>
                <div class="box2M">2</div>
                <div class="box2M">3</div>
                <div class="box2M">4</div>
                <div class="box2M">5</div>
                <div class="box2M">6</div>
            </div>    
            <div class="descProM">Seleccione una Talla</div>   
            <div class="tallaContainer">
                <div class="box3M">1</div>
                <div class="box3M">2</div>
                <div class="box3M">3</div>
                <div class="box3M">4</div>
                <div class="box3M">5</div>
                <div class="box3M">6</div>
            </div>  
            <div class="descProductM">
                <p>Detalles de Producto</p>
            </div>
        <div>          
           <ul class="ListaCollapse">
